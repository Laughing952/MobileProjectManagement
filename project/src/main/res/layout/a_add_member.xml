<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="com.project.ui.viewmodel.AddMemberVM"/>

        <variable
            name="click"
            type="android.view.View.OnClickListener"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <!--姓名-->
        <RelativeLayout
            android:id="@+id/rl_add_member_manager"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="姓名"
                />

            <EditText
                android:id="@+id/edt_add_member_name"
                style="@style/style_edit_text_user_info"
                android:layout_toLeftOf="@+id/iv_arrow2"
                android:hint="请输入姓名"
                android:maxLength="13"
                android:text="@={viewmodel.g_name}"
                />


            <ImageView
                android:id="@id/iv_arrow2"
                style="@style/style_width_height_wrap_content_arrow"
                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>
        <!--手机号-->
        <RelativeLayout
            android:id="@+id/rl_add_member_phone_num"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="手机号"
                />

            <EditText
                android:id="@+id/et_add_member_phone_num"
                style="@style/style_edit_text_user_info"
                android:layout_toLeftOf="@+id/iv_add_member_arrow2"
                android:autoLink="phone"
                android:digits="0123456789"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:text="@={viewmodel.g_phone_num}"
                />

            <ImageView
                android:id="@id/iv_add_member_arrow2"
                style="@style/style_width_height_wrap_content_arrow"
                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>
        <!--分组-->
        <RelativeLayout
            android:id="@+id/rl_add_member_group"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="分组"
                />

            <TextView
                android:id="@+id/tv_add_member_grouping"
                style="@style/style_edit_text_user_info"
                android:layout_toLeftOf="@+id/iv_add_member_arrow3"
                android:hint="请选择分组"
                android:text="@={viewmodel.g_group.name}"
                />

            <ImageView
                android:id="@+id/iv_add_member_arrow3"
                style="@style/style_width_height_wrap_content_arrow"
                />
        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      style="@style/style_width_height_match_parent"
                      android:background="@color/color_main_bg_white"
                      android:orientation="vertical"
                      android:padding="10dp">

            <TextView
                style="@style/style_width_height_wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="备注"
                android:textColor="@color/color_main_text_light_black"
                android:textSize="@dimen/sp_16"/>

            <EditText
                android:id="@+id/et_add_member_other"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_input_area"
                android:gravity="left|top"
                android:hint="请输入您的备注信息"
                android:padding="5dp"
                android:text="@={viewmodel.g_other}"
                android:textSize="@dimen/sp_14"/>

        </LinearLayout>

        <View
            style="@style/style_flow_people_1_ps_line_grey"></View>

    </LinearLayout>
</layout>