<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="java.lang.String"/>

        <variable
            name="click"
            type="android.view.View.OnClickListener"/>
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--系统消息:已隐藏-->
            <LinearLayout
                android:id="@+id/ll_working_sys_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    style="@style/style_working_rl_item">

                    <FrameLayout
                        style="@style/style_width_height_wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_working_icon_sys_msg"
                            style="@style/style_working_image"
                            android:src="@mipmap/ic_camera"/>

                        <TextView
                            android:id="@+id/tv_circle_sys_msg"
                            style="@style/style_working_msg_icon"
                            android:text="8"/>

                    </FrameLayout>


                    <TextView
                        android:id="@+id/tv_sys_msg"
                        style="@style/style_working_title"
                        android:text="系统消息"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_working_toast_sys_msg"
                    style="@style/style_working_describe"
                    android:text="提示：暂无系统消息"/>

                <View
                    style="@style/style_flow_people_8_dp_height_split_line"/>
            </LinearLayout>
            <!--系统公告-->
            <LinearLayout
                android:id="@+id/ll_working_sys_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:onClick="@{click}"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/style_working_rl_item">

                    <FrameLayout
                        style="@style/style_width_height_wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_working_icon_sys_notice"
                            style="@style/style_working_image"
                            android:src="@mipmap/ic_company_announcement"/>

                        <TextView
                            android:id="@+id/tv_circle_sys_notice"
                            style="@style/style_working_msg_icon"
                            android:text=""
                            android:visibility="gone"/>

                    </FrameLayout>


                    <TextView
                        android:id="@+id/tv_sys_notice"
                        style="@style/style_working_title"
                        android:text="系统公告"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_working_toast_sys_notice"
                    style="@style/style_working_describe"
                    android:text="提示：暂无公告发布"/>

                <View
                    style="@style/style_flow_people_8_dp_height_split_line"/>
            </LinearLayout>
            <!--项目公告-->
            <LinearLayout
                android:id="@+id/ll_working_project_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/style_working_rl_item">

                    <FrameLayout
                        style="@style/style_width_height_wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_working_icon_project_notice"
                            style="@style/style_working_image"
                            android:src="@mipmap/ic_sound"/>

                        <TextView
                            android:id="@+id/tv_circle_project_notice"
                            style="@style/style_working_msg_icon"
                            android:text="3"
                            />

                    </FrameLayout>


                    <TextView
                        android:id="@+id/tv_project_notice"
                        style="@style/style_working_title"
                        android:text="项目公告"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_working_toast_project_notice"
                    style="@style/style_working_describe"
                    android:text="提示：暂无项目公告"/>

                <View
                    style="@style/style_flow_people_8_dp_height_split_line"/>
            </LinearLayout>
            <!--通用申请-->
            <LinearLayout
                android:id="@+id/ll_working_general_approval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/style_working_rl_item">

                    <FrameLayout
                        style="@style/style_width_height_wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_working_icon_general_approval"
                            style="@style/style_working_image"
                            android:src="@mipmap/ic_request"/>

                        <TextView
                            android:id="@+id/tv_circle_general_approval"
                            style="@style/style_working_msg_icon"
                            android:text="1"
                            />

                    </FrameLayout>


                    <TextView
                        android:id="@+id/tv_general_approval"
                        style="@style/style_working_title"
                        android:text="通用申请"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_working_toast_general_approval"
                    style="@style/style_working_describe"
                    android:text="xxx项目施工"/>

                <View
                    style="@style/style_flow_people_8_dp_height_split_line"/>
            </LinearLayout>

            <!--工作任务-->
            <LinearLayout
                android:id="@+id/ll_working_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/style_working_rl_item">

                    <FrameLayout
                        style="@style/style_width_height_wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_working_icon_tasks"
                            style="@style/style_working_image"
                            android:src="@mipmap/ic_working_task"/>

                        <TextView
                            android:id="@+id/tv_circle_tasks"
                            style="@style/style_working_msg_icon"
                            android:text="7"
                            />

                    </FrameLayout>


                    <TextView
                        android:id="@+id/tv_tasks"
                        style="@style/style_working_title"
                        android:text="工作任务"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_working_toast_tasks"
                    style="@style/style_working_describe"
                    android:text="xx工作任务"/>

                <View
                    style="@style/style_flow_people_8_dp_height_split_line"/>
            </LinearLayout>

            <!--当天打卡-->
            <LinearLayout
                android:id="@+id/ll_working_today_punch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/style_working_rl_item">

                    <FrameLayout
                        style="@style/style_width_height_wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_working_icon_today_punch"
                            style="@style/style_working_image"
                            android:src="@mipmap/ic_punch"/>

                        <TextView
                            android:id="@+id/tv_circle_today_punch"
                            style="@style/style_working_msg_icon"
                            android:text="2"
                            android:visibility="invisible"
                            />

                    </FrameLayout>


                    <TextView
                        android:id="@+id/tv_today_punch"
                        style="@style/style_working_title"
                        android:text="签到打卡"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_working_toast_today_punch"
                    style="@style/style_working_describe"
                    android:text="记得每天到此签到"
                    />

                <View
                    style="@style/style_flow_people_8_dp_height_split_line"/>
            </LinearLayout>
            <!--待处理计划-->
            <LinearLayout
                android:id="@+id/ll_working_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/style_working_rl_item">

                    <FrameLayout
                        style="@style/style_width_height_wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_working_icon_plan"
                            style="@style/style_working_image"
                            android:src="@mipmap/ic_undo_plan"/>

                        <TextView
                            android:id="@+id/tv_circle_plan"
                            style="@style/style_working_msg_icon"
                            android:text="2"
                            />

                    </FrameLayout>


                    <TextView
                        android:id="@+id/tv_plan"
                        style="@style/style_working_title"
                        android:text="待处理计划"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_working_toast_plan"
                    style="@style/style_working_describe"
                    android:text="提示：暂无待处理计划"/>

                <View
                    style="@style/style_flow_people_8_dp_height_split_line"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</layout>