                </LinearLayout>

                <View
                    style="@style/style_flow_people_1_dp_height_split_line"/>
                <!--星期天-->
                <LinearLayout
                    style="@style/style_working_punch_ll">

                    <CheckBox
                        android:id="@+id/cb_punch_setting7"
