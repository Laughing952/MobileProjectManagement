                        android:checked="true"
                        android:onClick="@{click}"/>

                    <TextView
                        style="@style/style_working_punch_week"
                        android:text="星期五"/>

                    <TextView
                        android:id="@+id/tv_attendance_edit_time5"
                        style="@style/style_working_punch_time2"
