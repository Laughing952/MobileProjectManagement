<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="java.lang.String"/>

        <variable
            name="click"
            type="android.view.View.OnClickListener"/>
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                style="@style/style_working_punch_ll"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_add_custom_attendance_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="考勤点名称"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_search_project"
                    style="@style/style_search_box2"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:hint="请输入考勤点名称"
                    android:textColorHint="#ccc"/>

            </LinearLayout>
            style="@style/style_flow_people_1_dp_height_split_line"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="考勤时间"
                android:textColor="#999"
                android:textSize="@dimen/sp_12"/>
            <!--星期1-->
            <LinearLayout
                style="@style/style_working_punch_ll">

                <CheckBox
                    android:id="@+id/cb_punch_setting1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:onClick="@{click}"/>

                <TextView
                    style="@style/style_working_punch_week"
                    android:text="星期一"/>

                <TextView
                    android:id="@+id/tv_add_custom_attendance_time1"
                    style="@style/style_working_punch_time2"
                    android:text="09:00"/>

                <TextView
                    style="@style/style_working_punch_time2"
                    android:layout_width="wrap_content"
                    android:text="-"/>

                <TextView
                    android:id="@+id/tv_add_custom_attendance_time12"
                    style="@style/style_working_punch_time2"
                    android:text="18:00"/>

                <ImageView
                    android:id="@+id/iv_add_custom_attendance1"
                    style="@style/style_add_custom_attendance_iv"
                    android:onClick="@{click}"
                    android:src="@mipmap/topbar_icon_more_blue"/>
            </LinearLayout>

            <View
                style="@style/style_flow_people_1_dp_height_split_line"/>
            <!--星期2-->
            <LinearLayout
                style="@style/style_working_punch_ll">

                <CheckBox
                    android:id="@+id/cb_punch_setting2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
