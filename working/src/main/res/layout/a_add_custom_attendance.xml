            </LinearLayout>

            <View
                style="@style/style_flow_people_8_dp_height_split_line"/>

            <!--考勤地点-->
            <RelativeLayout
                android:id="@+id/rl_add_custom_attendance_address"
                style="@style/style_common_line_style"
                android:layout_width="match_parent"
                android:background="@color/color_main_bg_white"
                android:onClick="@{click}">

                <TextView
                    style="@style/style_width_height_wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="2dp"
                    android:text="考勤地点"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/tv_add_custom_attendance_address"
                    style="@style/style_edit_text_user_info"
                    android:layout_toLeftOf="@+id/iv_add_custom_attendance_arrow3"
                    android:paddingRight="10dp"
                    android:text=""
                    />

                <ImageView
                    android:id="@id/iv_add_custom_attendance_arrow3"
                    style="@style/style_width_height_wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_right"/>

            </RelativeLayout>

            <View
                style="@style/style_flow_people_1_dp_height_split_line"/>
            <!--有效考勤范围-->
            <RelativeLayout
                android:id="@+id/rl_add_custom_attendance_range"
                style="@style/style_common_line_style"
                android:layout_width="match_parent"
                android:background="@color/color_main_bg_white"
                android:onClick="@{click}">

                <TextView
                    style="@style/style_width_height_wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="2dp"
