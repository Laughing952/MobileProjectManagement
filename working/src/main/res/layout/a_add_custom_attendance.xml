                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/tv_add_custom_attendance_range"
                    style="@style/style_edit_text_user_info"
                    android:layout_toLeftOf="@+id/iv_add_custom_attendance_arrow3"
                    android:paddingRight="10dp"
                    android:text="500米"
                    />

                <ImageView
                    android:id="@id/iv_add_custom_attendance_arrow3"
                    style="@style/style_width_height_wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_down"/>

            </RelativeLayout>

            <View
