<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="java.lang.String"/>

        <variable
            name="click"
            type="android.view.View.OnClickListener"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_message_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_camera"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_message_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="您有一个新任务"
                android:textColor="@color/base_title_bg"
                android:textSize="@dimen/sp_12"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/iv_message_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_camera"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_message_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务名称：下周工作分配完成"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/tv_message_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目名称：项目1"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/tv_message_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间：2018.07.05"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_12"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/tv_message_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="2018.05.05 15:30"
                    android:textColor="#999"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/tv_message_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查看详情"
                    android:textColor="#999"
                    android:textSize="@dimen/sp_14"/>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_message_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_camera"/>
    </LinearLayout>
</layout>