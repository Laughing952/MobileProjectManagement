<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="com.unistrong.working.ui.viewmodel.SentToMeDetailsVM"/>

        <variable
            name="click"
            type="android.view.View.OnClickListener"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <!--安排人-->
        <RelativeLayout
            android:id="@+id/rl_send_to_me_details_header_project_arrange_people_name"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="安排人:"
                />
            <!--android:text="@={viewmodel.p_name}"-->

            <TextView
                android:id="@+id/tv_send_to_me_details_header_project_arrange_people_name"
                style="@style/style_edit_text_user_info"
                android:maxLength="20"
                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>
        <!--执行人-->
        <RelativeLayout
            android:id="@+id/rl_send_to_me_details_header_approve_person"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="执行人:"
                />
            <!--android:text="@={viewmodel.performer}"-->

            <TextView
                android:id="@+id/tv_send_to_me_details_header_approve_person"
                style="@style/style_edit_text_user_info"
                android:maxLength="20"
                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>

        <!--项目名-->
        <RelativeLayout
            android:id="@+id/rl_send_to_me_details_header_project_name"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="项目:"
                />
            <!--android:text="@={viewmodel.p_name}"-->

            <TextView
                android:id="@+id/tv_send_to_me_details_header_project_name"
                style="@style/style_edit_text_user_info"
                android:maxLength="20"
                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>


        <!--任务名称-->
        <RelativeLayout
            android:id="@+id/rl_send_to_me_details_header_task_name"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="任务名称:"
                />
            <!--android:text="@={viewmodel.content}"-->
            <TextView
                android:id="@+id/tv_send_to_me_details_header_task_name"
                style="@style/style_edit_text_user_info"
                android:ellipsize="end"
                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>

        <!--截止日期-->
        <RelativeLayout
            android:id="@+id/rl_send_to_me_details_header_end_date"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="截止日期:"
                />
            <!--android:text="@={viewmodel.date}"-->

            <TextView
                android:id="@+id/et_send_to_me_details_header_end_date"
                style="@style/style_edit_text_user_info"
                android:maxLength="20"
                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>


        <!--描述-->
        <RelativeLayout
            android:id="@+id/rl_send_to_me_details_header_describe"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="描述:"
                />
            <!--android:text="@={viewmodel.des}"-->
            <!--android:text="asdjlf"-->
            <TextView
                android:id="@+id/et_send_to_me_details_header_describe"
                style="@style/style_edit_text_user_info"
                android:maxLength="20"
                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>

        <!--参与人-->
        <RelativeLayout
            android:id="@+id/rl_send_to_me_details_header_join_person"
            style="@style/style_common_line_style"
            android:onClick="@{click}"
            >

            <TextView
                style="@style/style_width_height_wrap_content_right_arrow"
                android:text="参与人:"
                />
            <!--android:text="@={viewmodel.join_people}"-->
            <TextView
                android:id="@+id/tv_send_to_me_details_header_join_person"
                style="@style/style_edit_text_user_info"
                android:maxLength="20"

                />

        </RelativeLayout>

        <View
            style="@style/style_flow_people_8_dp_height_split_line"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="任务动态"
            android:textColor="@color/base_title_bg"
            android:textSize="@dimen/sp_16"/>

        <View
            style="@style/style_flow_people_1_dp_height_split_line"/>
    </LinearLayout>
</layout>