<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="android.view.View.OnClickListener"/>

        <variable
            name="loginInfo"
            type="com.login.bean.UserInfo"/>
    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:src="@mipmap/ic_management"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            style="@style/TextInputLayoutStyle"
            android:layout_marginTop="20dp"
            app:counterMaxLength="11"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/ErrorText">
            <!--这里可以直接使用EditText-->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_phone"
                style="@style/TextInputEditTextStyle"
                android:hint="手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:text="@={loginInfo.phoneNum}"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            style="@style/TextInputLayoutStyle"
            android:layout_marginTop="20dp"
            app:counterMaxLength="20"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/ErrorText"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/main_color"
            app:passwordToggleTintMode="multiply">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                style="@style/TextInputEditTextStyle"
                android:hint="密码(长度6-20位，由数字，字母组成)"
                android:inputType="textPassword"
                android:maxLength="20"
                android:text="@={loginInfo.password}"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_login"
            style="@style/BottomBottonStyle"
            android:layout_marginTop="30dp"
            android:onClick="@{click}"
            android:text="登录"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:text="忘记密码？"
                android:textSize="14sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/black"/>

            <TextView
                android:id="@+id/tv_go_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:text="注册账号"
                android:textSize="14sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/black"/>

            <TextView
                android:id="@+id/tv_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{click}"
                android:text="修改密码"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</layout>